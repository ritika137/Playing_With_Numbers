<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg"
    tools:context="com.example.ritika.checkgif.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/image1"
        android:id="@+id/imageViewf"
        android:layout_centerInParent="true"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:paddingBottom="10dp"
            android:id="@+id/LinearLayout1">

            <FrameLayout
                android:layout_width="163dp"
                android:layout_height="match_parent"
                android:background="@drawable/create"
                android:id="@+id/balloon1"
                android:layout_marginRight="5dp"
                android:paddingLeft="10dp"
                android:clickable="true"
                android:layout_weight="0.58">


                <TextView
                    android:text="1"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="25dp"
                    android:layout_weight="1"
                    android:textSize="65dp"
                    android:textColor="#04ff00"
                    android:elevation="10dp"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:fontFamily="monospace"
                    android:textStyle="bold"
                    android:visibility="visible"
                    />

            </FrameLayout>
            <FrameLayout
                android:layout_width="163dp"
                android:layout_height="match_parent"
                android:background="@drawable/create"
                android:id="@+id/balloon2"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:clickable="true" >

                <TextView
                    android:text="2"
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"
                    android:paddingRight="9dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="25dp"
                    android:layout_weight="1"
                    android:textSize="65dp"
                    android:textColor="#8000ff"
                    android:elevation="10dp"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:fontFamily="monospace"
                    android:visibility="visible"
                    android:textStyle="bold"
                    />

            </FrameLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:id="@+id/LinearLayout2">

            <FrameLayout
                android:layout_width="163dp"
                android:layout_height="match_parent"
                android:background="@drawable/create"
                android:id="@+id/balloon3"
                android:layout_marginRight="5dp"
                android:paddingLeft="10dp"
                android:clickable="true"
                android:layout_weight="0.58">


                <TextView
                    android:text="3"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="25dp"
                    android:layout_weight="1"
                    android:textSize="65dp"
                    android:textColor="@android:color/holo_blue_bright"
                    android:elevation="10dp"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="monospace"
                    android:visibility="visible"
                    android:textAlignment="center"
                    android:textColorLink="#8000ff"
                    android:textColorHighlight="#8000ff"
                    android:textStyle="bold" />

            </FrameLayout>
            <FrameLayout
                android:layout_width="163dp"
                android:layout_height="match_parent"
                android:background="@drawable/create"
                android:id="@+id/balloon4"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:clickable="true" >

                <TextView
                    android:text="4"
                    android:layout_width="76dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="25dp"
                    android:layout_weight="1"
                    android:textSize="65dp"
                    android:textAlignment="center"
                    android:textColor="#fffb00"
                    android:elevation="10dp"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="monospace"
                    android:visibility="visible"
                    android:textColorHighlight="#8000ff"
                    android:textColorHint="#8000ff"
                    android:textColorLink="#8000ff"
                    android:textStyle="bold"/>

            </FrameLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="0.4"
            android:paddingBottom="10dp"
            android:id="@+id/BatchLayout"
            android:clickable="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageView1"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageView2"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageView3"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageView4"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageView5"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>


