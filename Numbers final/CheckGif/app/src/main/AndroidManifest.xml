<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.awesome.fun.withNumbers">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/app_icon"
        android:label="Fun With Numbers"
        android:largeHeap="true"
        android:noHistory="true"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name="com.awesome.fun.withNumbers.MainActivity"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.awesome.fun.withNumbers.DrawActivity"
            android:noHistory="true" />
        <activity android:name="com.awesome.fun.withNumbers.BatchActivity" />
        <activity android:name="com.awesome.fun.withNumbers.Main2Activity"></activity>
    </application>

</manifest>